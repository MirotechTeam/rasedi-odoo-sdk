<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_rasedi" model="ir.ui.view">
        <field name="name">Rasedi Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="after">
                <group invisible="code != 'rasedi'">
                    <field name="rasedi_secret_key" required="code == 'rasedi' and state != 'disabled'"/>
                    <field name="rasedi_private_key" required="code == 'rasedi' and state != 'disabled'"/>
                </group>
                <group invisible="code != 'rasedi'">
                     <field name="rasedi_collect_fee"/>
                     <field name="rasedi_collect_email"/>
                     <field name="rasedi_collect_phone"/>
                     <field name="rasedi_gateway_ids" widget="many2many_checkboxes"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
